{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "__SERVER__": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "blockBindings": true
  },
  "rules": {
    // Strict mode
    "object-shorthand": [
      2,
      "always"
    ],
    "arrow-parens": [
      2,
      "as-needed"
    ],
  }
}

